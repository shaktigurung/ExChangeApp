<p id="notice"><%= notice %></p>
<div class = "container">
<div class="row">
  <div class="col-md-12">
    <h1>Welcome To ExChange</h1>
    <h3><strong>Swap what you don't like with what you love </strong> </h3><br>
  </div>
</div>
</div>
<div class="row">
<div class="col-md-12">
    <% @products.each do |product| %>
    <div class="col-md-4">
        <%= image_tag product.image_url(:thumb) %> <br>
      <h2> <%= product.name %><br></h2>
        <%= product.description %><br>
        <%= product.price %><br>
        <% if user_signed_in? && current_user.id == product.user_id %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif user_signed_in? && current_user.id %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Submit Offer', product %></td>
        <% else %>
        <td><%= link_to 'Show', product %></td>
         <%end%>
    </div>
    <% end %>
